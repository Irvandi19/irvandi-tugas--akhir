<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".MainActivityBeranda">

    <!-- Monitoring Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitoring"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FFCDD2"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/temperature"
                android:contentDescription="Temperature Icon"
                android:layout_marginStart="-9dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suhu"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/textSuhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="24Â°C"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#BBDEFB"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:src="@drawable/listrik"
                android:contentDescription="Current Icon"
                android:layout_marginEnd="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Listrik"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/textArus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Menyala"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FFECB3"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/fire"
                android:contentDescription="Fire Icon"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Api"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/textApi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Aman"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#C8E6C9"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:gravity="left">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/smoke"
                android:contentDescription="Smoke Icon"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Asap"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/textAsap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Aman"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- Control Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Smart Lamp Control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="#75A395"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/lampManualImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lightbulboff"
            android:visibility="gone"
            android:contentDescription="Manual Lamp Icon"/>
        <ImageView
            android:id="@+id/lampAutoImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lightbulb"
            android:visibility="gone"
            android:contentDescription="Auto Lamp Icon"/>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="OFF"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <Switch
                android:id="@+id/switchLamp"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:width="48dp"
                android:height="48dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="ON" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <!-- AC Control -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#75A395"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/acManualImage"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/airconditioner"
                android:visibility="gone"
                android:contentDescription="Manual AC Icon"/>
            <ImageView
                android:id="@+id/acAutoImage"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/acotomatis"
                android:visibility="gone"
                android:contentDescription="Auto AC Icon"/>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="OFF"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center" />

                <Switch
                    android:id="@+id/switchAC"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:width="48dp"
                    android:height="48dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="ON" />
            </LinearLayout>
        </LinearLayout>

        <!-- Door Control -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#75A395"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/door"
                android:contentDescription="Door Icon" />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="OPEN"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <Switch
                    android:id="@+id/switchPintu"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:width="48dp"
                    android:height="48dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="LOCK" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- Separate Camera and Schedule Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <!-- Camera Button -->
        <LinearLayout
            android:id="@+id/btnKamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#75A395"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:onClick="onCameraClick">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/kamera"
                android:contentDescription="Camera" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Kamera"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Schedule Button -->
        <LinearLayout
            android:id="@+id/btnJadwal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#75A395"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:onClick="onScheduleClick">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/riwayat"
                android:contentDescription="Schedule"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Penjadwalan"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
